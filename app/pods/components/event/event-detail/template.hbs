<div class="box">
  <div class="header">
    {{event/event-avatar
      hasLinkToTwitter=true
      event=model
    }}
    <div class="summary">
      <time
      datetime='{{moment-format model.date 'YYYY-MM-DDTHH:mm' }}'
      class='date'
      title="{{moment-from-now model.date}}">
      {{moment-format model.date 'dddd DD MMMM HH:mm' }}h
      </time>
      <h1 class="title"> {{model.title }} </h1>
      <div class="actions">
        <a href="{{model.link}}" class="button -primary">Ver fuente</a>
        {{#unless model.isPastEvent}}
          <a href="{{model.calendarURL}}" target="_blank" class="button">AÃ±adir al calendario</a>
        {{/unless}}
      </div>
    </div>
  </div>
    <div class="description">
      <p > {{{ linkify-text model.description }}} </p>
    </div>
    <div class="bottom-actions">
      <a href="{{model.link}}" class="button -primary">Ver fuente</a>
    </div>
</div>
